# MACP Research Assistant â€” Nginx Reverse Proxy Configuration (P3C-02)
# =====================================================================
# Production deployment: TLS termination + reverse proxy to FastAPI.
#
# Usage:
#   1. Copy to /etc/nginx/sites-available/macp-research
#   2. Update server_name and ssl_certificate paths
#   3. Set ENFORCE_HTTPS=true in backend .env
#   4. Run: sudo nginx -t && sudo systemctl reload nginx

server {
    listen 80;
    server_name your-domain.example.com;

    # Redirect all HTTP traffic to HTTPS
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    server_name your-domain.example.com;

    # TLS certificates (use Let's Encrypt / certbot)
    ssl_certificate     /etc/letsencrypt/live/your-domain.example.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/your-domain.example.com/privkey.pem;

    # TLS hardening
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # Security headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Content-Type-Options nosniff always;
    add_header X-Frame-Options DENY always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Rate limiting zone (optional, complements FastAPI slowapi)
    # limit_req_zone $binary_remote_addr zone=api:10m rate=30r/m;

    # FastAPI backend (port 8000)
    location /api/ {
        proxy_pass http://127.0.0.1:8000/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 120s;
    }

    # Frontend static files (Vite build output)
    location / {
        root /var/www/macp-research/frontend/dist;
        try_files $uri $uri/ /index.html;
    }
}
