# MACP Research Assistant — Phase 3B Configuration
# Copy to .env and fill in your values.

# Database
MACP_DATABASE_URL=sqlite:///../../.macp/macp.db

# Rate limits (requests per window)
RATE_LIMIT_SEARCH=30/minute
RATE_LIMIT_ANALYZE=10/minute
RATE_LIMIT_GUEST_SEARCH=5/day
RATE_LIMIT_GUEST_ANALYZE=2/day

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# MCP Server
MCP_SERVER_PORT=8001

# LLM Provider Keys (BYOK — leave blank to require per-request keys)
# GEMINI_API_KEY=
# ANTHROPIC_API_KEY=
# OPENAI_API_KEY=

# Auth — set a master API key for the MCP server (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
# MACP_API_KEY=

# GitHub App OAuth
GITHUB_APP_CLIENT_ID=
GITHUB_APP_CLIENT_SECRET=
GITHUB_APP_REDIRECT_URI=http://localhost:8000/api/auth/github/callback

# JWT
JWT_SECRET=dev-secret-change-in-production
JWT_EXPIRY_HOURS=168

# Rate limits (authenticated tier)
RATE_LIMIT_AUTH_SEARCH=60/minute
RATE_LIMIT_AUTH_ANALYZE=20/minute
RATE_LIMIT_AUTH_MCP=60/minute

# HTTPS enforcement — set to true in production (behind reverse proxy)
ENFORCE_HTTPS=false
