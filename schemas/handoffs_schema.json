{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MACP Handoffs Schema",
  "description": "Schema for the handoffs.json file in the MACP protocol.",
  "type": "object",
  "properties": {
    "handoffs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "handoff_id": {
            "type": "string",
            "description": "Unique identifier for the handoff."
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "The ISO 8601 timestamp of the handoff."
          },
          "from_agent": {
            "type": "string",
            "description": "The agent initiating the handoff."
          },
          "to_agent": {
            "type": "string",
            "description": "The agent receiving the handoff."
          },
          "task_summary": {
            "type": "string",
            "description": "A brief summary of the task or research context being handed off."
          },
          "completed": {
            "type": "array",
            "items": { "type": "string" },
            "description": "List of actions completed before handoff."
          },
          "pending": {
            "type": "array",
            "items": { "type": "string" },
            "description": "List of pending actions for the receiving agent."
          },
          "papers": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Paper IDs relevant to this handoff."
          },
          "artifacts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "path": { "type": "string" },
                "description": { "type": "string" }
              },
              "required": ["path", "description"]
            },
            "description": "Files or outputs created during the handoff session."
          },
          "knowledge_state": {
            "type": "object",
            "description": "Snapshot of knowledge base state at handoff time.",
            "properties": {
              "total_papers": { "type": "integer" },
              "total_sessions": { "type": "integer" },
              "total_citations": { "type": "integer" }
            }
          }
        },
        "required": ["handoff_id", "from_agent", "to_agent"]
      }
    }
  },
  "required": ["handoffs"]
}
